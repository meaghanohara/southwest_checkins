<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Flights

    <a data-toggle="collapse" href="#user_flights_new_form">
      Add flight
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.flights.each do |flight| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/flights/<%= flight.id %>">
          <%= flight.description %>
        </a>

        <a href="/delete_flight_from_user/<%= flight.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_flights_new_form">
        <%= render partial: "user_templates/user_flights_new_form" %>
      </div>
    </div>

  </ul>
</div>
