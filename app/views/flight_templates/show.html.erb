<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Flight #<%= @flight.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/flights" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/flights/<%= @flight.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit flight
        </a>
      </div>

      <div class="col">
        <a href="/delete_flight/<%= @flight.id %>" class="btn btn-block btn-outline-secondary">
          Delete flight
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Description
      </dt>
      <dd>
        <%= @flight.description %>
      </dd>

      <dt>
        Phone number
      </dt>
      <dd>
        <%= @flight.phone_number %>
      </dd>

      <dt>
        Message sent
      </dt>
      <dd>
        <%= @flight.message_sent %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @flight.user.present? %>
          <a href="/users/<%= @flight.user_id %>">
            <%= @flight.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Departs at
      </dt>
      <dd>
        <%= @flight.departs_at %>
      </dd>

      <dt>
        Minute message sent
      </dt>
      <dd>
        <%= @flight.minute_message_sent %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@flight.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@flight.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

