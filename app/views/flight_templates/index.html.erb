<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All flights
    </h1>

    <a href="/flights/new" class="btn btn-block btn-outline-secondary">
      Add a new flight
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Phone number
        </th>

        <th>
          Message sent
        </th>

        <th>
          User
        </th>

        <th>
          Departs at
        </th>

        <th>
          Minute message sent
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @flights.each do |flight| %>
      <tr>
        <!-- Display flight.id start -->
        <td>
          <%= flight.id %>
        </td>
        <!-- Display flight.id end -->

        <!-- Display flight.description start -->
        <td>
          <%= flight.description %>
        </td>
        <!-- Display flight.description end -->

        <!-- Display flight.phone_number start -->
        <td>
          <%= flight.phone_number %>
        </td>
        <!-- Display flight.phone_number end -->

        <!-- Display flight.message_sent start -->
        <td>
          <%= flight.message_sent %>
        </td>
        <!-- Display flight.message_sent end -->

        <!-- Display flight.user_id start -->
        <td>
          <%= flight.user.email %>
        </td>
        <!-- Display flight.user_id end -->

        <!-- Display flight.departs_at start -->
        <td>
          <%= flight.departs_at %>
        </td>
        <!-- Display flight.departs_at end -->

        <!-- Display flight.minute_message_sent start -->
        <td>
          <%= flight.minute_message_sent %>
        </td>
        <!-- Display flight.minute_message_sent end -->

        <!-- Display flight.created_at start -->
        <td>
          <%= time_ago_in_words(flight.created_at) %> ago
        </td>
        <!-- Display flight.created_at end -->

        <!-- Display flight.updated_at start -->
        <td>
          <%= time_ago_in_words(flight.updated_at) %> ago
        </td>
        <!-- Display flight.updated_at end -->

        <td>
          <a href="/flights/<%= flight.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
