<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All flights
    </h1>

    <a href="/flights/new" class="btn btn-block btn-outline-secondary">
      Add a new flight
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "flight_templates/flights_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Phone number
        </th>

        <th>
          Message sent
        </th>

        <th>
          User
        </th>

        <th>
          Departs at
        </th>

        <th>
          Minute message sent
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @flights.each do |flight| %>
      <tr>
        <td>
          <%= flight.id %>
        </td>

        <td>
          <%= flight.description %>
        </td>

        <td>
          <%= flight.phone_number %>
        </td>

        <td>
          <%= flight.message_sent %>
        </td>

        <td>
          <% if flight.user.present? %>
            <a href="/users/<%= flight.user.id %>">
              <%= flight.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= flight.departs_at %>
        </td>

        <td>
          <%= flight.minute_message_sent %>
        </td>

        <td>
          <%= time_ago_in_words(flight.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(flight.updated_at) %> ago
        </td>

        <td>
          <a href="/flights/<%= flight.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @flights, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
