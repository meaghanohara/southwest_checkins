<h1>
  Add a new flight
</h1>


<hr>

<form action="/create_flight" method="post">

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control">
  </div>

  <div class="form-group">
    <label for="phone_number">
      Phone number
    </label>

    <input type="text" id="phone_number" name="phone_number" class="form-control">
  </div>

  <div class="form-group">
    <label for="message_sent">
      Message sent
    </label>

    <input type="text" id="message_sent" name="message_sent" class="form-control">
  </div>

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @flight.user_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="departs_at">
      Departs at
    </label>

    <input type="text" id="departs_at" name="departs_at" class="form-control">
  </div>

  <div class="form-group">
    <label for="minute_message_sent">
      Minute message sent
    </label>

    <input type="text" id="minute_message_sent" name="minute_message_sent" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create flight
  </button>
</form>

<hr>

<a href="/flights">
  Go back
</a>
